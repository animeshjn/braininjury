<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      <item android:state_checked="true" android:drawable="@drawable/blankon"/>
    
    
    <item android:state_checked="false" android:drawable="@drawable/blankoff"/>
    <item android:state_pressed="true"
          android:drawable="@drawable/blankon" /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/blankon" /> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/blankon" /> <!-- hovered -->
  
  
      <item android:drawable="@drawable/blankoff" /> <!-- default -->
</selector>
